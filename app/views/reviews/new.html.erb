<%= form_tag "/items/#{@item.id}" do %>
  <%= label_tag :title %>
  <%= text_field_tag :title%>

  <%= label_tag :content %>
  <%= text_field_tag :content%>

  <%= label_tag :rating %>
  <%= select_tag :rating, options_for_select([1, 2, 3, 4, 5]), prompt: 'Choose Rating' %>

  <%= submit_tag 'Add Review', class: "submit-button" %>
<% end %>
